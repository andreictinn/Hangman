import random

def choose_random_word(word_list):
    return random.choice(word_list)

def get_user_guess():
    return input("Enter a single letter: ")

def is_valid_guess(guess):
    return len(guess) == 1 and guess.isalpha()

def check_guess(secret_word):
    guess = get_user_guess().lower()

    while True:
        if guess in secret_word:
            print(f"Good guess! {guess} is in the word.")
            return True
        else:
            print(f"Sorry, {guess} is not in the word. Try again.")
            guess = get_user_guess().lower()

def main():
    word_list = ["apple", "mango", "kiwi", "tangerine", "orange"]
    secret_word = choose_random_word(word_list)
    
    print(secret_word)
    
    if is_valid_guess(get_user_guess()):
        check_guess(secret_word)
    else:
        print("Oops! That is not a valid input.")

if __name__ == "__main__":
    main()

